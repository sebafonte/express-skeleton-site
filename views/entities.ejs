<!DOCTYPE html>
<html>
  <head><% include partials/header %></head>
  <body>
    <div class="container">
      <div class="navbar navbar-default navbar-fixed-top" role="navigation" style="background-color: indigo; ">
        <div class="container">
        <% include partials/menu %>
        </div>
      </div>

      <!-- Modal -->
      <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header" style="background-color: lightgrey;">
              <h5 class="modal-title" id="exampleModalLongTitle">Add Postulant</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
            <div class="input-group">
	    <div>
              <input type="text" class="form-control" placeholder="Username" aria-label="Name" aria-describedby="basic-addon1">
	    </div>
	    <div>
              <input type="text" class="form-control" placeholder="Contact" aria-label="Telephone" aria-describedby="basic-addon1">
	    </div>
	    <div>
              <input type="text" class="form-control" placeholder="Tags" aria-label="Tags" aria-describedby="basic-addon1">
	    </div>
	    <div>
              <textarea class="form-control" aria-label="With textarea" placeholder="Comments" style="width: 100%"></textarea>
	    </div>
            </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save</button>
            </div>
          </div>
        </div>
      </div>

      <!-- Button trigger modal -->
      <div style="margin-top: 60px;">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
        Add new
      </button>
      </div>

      <div style="display: inline-grid; margin-top: 25px">
	<% include partials/item-entity %>
      </div>
    </div>
    <script>
      $(document).ready(function() { document.getElementById("bar-entities").style.fontWeight = "bold" });
    </script>

    <% include partials/style %>
  </body>
</html>

